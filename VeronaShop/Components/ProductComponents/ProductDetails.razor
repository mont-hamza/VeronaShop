@page "/product/{id:int}"
@rendermode InteractiveServer
@inject IDbContextFactory<ApplicationDbContext> DbFactory
@using MudBlazor
@using Microsoft.EntityFrameworkCore
@using VeronaShop.Data
@code {
    [Parameter] public int id { get; set; }
    private VeronaShop.Data.Entites.Product product;
    protected override async Task OnParametersSetAsync()
    {
        using var db = DbFactory.CreateDbContext();
        product = await db.Products.Include(p => p.Category).Include(p => p.Supplier).FirstOrDefaultAsync(p => p.Id == id);
    }
}

@if (product == null)
{
    <p>Product not found.</p>
}
else
{
    <div class="product-detail">
        <img src="@(string.IsNullOrEmpty(product.ImageUrl) ? "images/placeholder.svg" : product.ImageUrl)" alt="@product.Name" style="max-width:300px;height:auto;object-fit:cover" />
        <h2>@product.Name</h2>
        <p>@product.Description</p>
        <p>Price: @string.Format(new System.Globalization.CultureInfo("en-LY"), "{0:C}", product.Price)</p>
        <p>Stock: @product.StockQuantity</p>

        @* Size selector and add to cart *@
        @if (!string.IsNullOrWhiteSpace(product.SizesCsv))
        {
            <div class="mt-2">
                <MudSelect T="string" @bind-Value="selectedSize" Label="Size" Dense="true" Style="min-width:140px" Placeholder="-- choose size --">
                    @foreach (var s in product.SizesCsv.Split(',', StringSplitOptions.RemoveEmptyEntries).Select(x => x.Trim()))
                    {
                        <MudSelectItem T="string" Value="@s">@s</MudSelectItem>
                    }
                </MudSelect>
            </div>
        }

        <div class="mt-2">
            <MudNumericField T="int" Label="Quantity" @bind-Value="qty" Min="1" Dense="true" Style="width:120px" />
        </div>

        <div class="mt-3 d-flex" style="gap:8px;">
            <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="AddToCart">Add to cart</MudButton>
            <MudButton Variant="Variant.Outlined" OnClick="BackToShop">Back to shop</MudButton>
        </div>
    </div>
}

@code {
    private int qty = 1;
    private string selectedSize = string.Empty;
    [Inject] private VeronaShop.Services.CartSessionService CartSession { get; set; }
    [Inject] private VeronaShop.Services.CartService CartService { get; set; }
    [Inject] private ISnackbar Snackbar { get; set; }
    [Inject] private NavigationManager Navigation { get; set; }

    private void BackToShop()
    {
        Navigation.NavigateTo("/shop");
    }

    private async Task AddToCart()
    {
        try
        {
            if (!string.IsNullOrEmpty(product.SizesCsv) && string.IsNullOrEmpty(selectedSize))
            {
                Snackbar.Add("Please select a size", Severity.Warning);
                return;
            }

            var sessionId = await CartSession.GetOrCreateSessionIdAsync();
            var cart = await CartService.GetOrCreateCartAsync(sessionId);
            await CartService.AddToCartAsync(cart, product.Id, qty, null, string.IsNullOrEmpty(selectedSize) ? null : selectedSize);
            Snackbar.Add("Added to cart", Severity.Success);
        }
        catch (Exception ex)
        {
            Console.Error.WriteLine(ex);
            Snackbar.Add("Failed to add to cart", Severity.Error);
        }
    }
}
