@inherits LayoutComponentBase
@using Microsoft.AspNetCore.Identity
@using VeronaShop.Data.Entites
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.SignalR.Client
@using System.Threading
@using System.Threading.Tasks
@using VeronaShop.Data
@using Microsoft.AspNetCore.Components.Authorization

<MudThemeProvider Theme="@_theme" IsDarkMode="_isDarkMode" />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />
<CascadingAuthenticationState>
    <MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudText Typo="Typo.h5" Class="ml-3">VeronaShop</MudText>
        <MudSpacer />
        <MudIconButton Icon="@(DarkLightModeButtonIcon)" Color="Color.Inherit" OnClick="@DarkModeToggle" />
        <AuthorizeView Roles="Admin">
            <Authorized>
                @if (failedNotificationsCount > 0)
                {
                    <MudBadge Class="notification-badge" Content="@failedNotificationsCount.ToString()" Color="Color.Warning" MaxValue="99">
                        <MudIconButton Icon="@(Icons.Material.Filled.Notifications)" Color="Color.Inherit" Title="Notifications" OnClick="OnNotificationsClicked" />
                    </MudBadge>
                }
                else
                {
                    <MudIconButton Icon="@(Icons.Material.Filled.Notifications)" Color="Color.Inherit" Title="Notifications" OnClick="OnNotificationsClicked" />
                }
            </Authorized>
        </AuthorizeView>
        <MudIconButton Icon="@Icons.Material.Filled.ShoppingCart" Color="Color.Inherit" Edge="Edge.End" OnClick="GoToCart">
            <span class="mud-badge mud-badge-dot" style="position:absolute;right:6px;top:6px;background-color:var(--mud-palette-error);color:white;border-radius:50%;width:20px;height:20px;display:flex;align-items:center;justify-content:center;font-size:12px;">@cartCount</span>
        </MudIconButton>
        <AuthorizeView>
            <Authorized>
                <MudMenu Icon="@Icons.Material.Filled.Person" AnchorOrigin="Origin.TopRight" TransformOrigin="Origin.TopRight">
                    <MudMenuItem OnClick="@( () => Navigation.NavigateTo("/account/profile") )">Profile</MudMenuItem>
                    <MudMenuItem Href="/auth/logout">Sign out</MudMenuItem>
                </MudMenu>
            </Authorized>
            <NotAuthorized>
                <MudButton Variant="Variant.Outlined" Color="Color.Inherit" OnClick="@( () => Navigation.NavigateTo("/account/login") )">Sign in</MudButton>
            </NotAuthorized>
        </AuthorizeView>
    </MudAppBar>
    <MudDrawer id="nav-drawer" @bind-Open="_drawerOpen" ClipMode="DrawerClipMode.Always" Elevation="2">
        <NavMenu />
    </MudDrawer>
    <MudMainContent Class="pt-16 pa-4">
        @Body
    </MudMainContent>
</MudLayout>

</CascadingAuthenticationState>


<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">🗙</span>
</div>

@code {
    private bool _drawerOpen = true;
    private bool _isDarkMode = true;
    private MudTheme? _theme = null;
    private int cartCount = 0;
    private int pendingOrdersCount = 0;
    private int failedNotificationsCount = 0;
    private HubConnection? _hubConnection;
    [Inject] private VeronaShop.Services.CartService CartService { get; set; }
    [Inject] private VeronaShop.Services.CartSessionService CartSession { get; set; }
    [Inject] private NavigationManager Navigation { get; set; }
    [Inject] private IDbContextFactory<ApplicationDbContext> DbFactory { get; set; }
    [Inject] private Microsoft.AspNetCore.Identity.UserManager<VeronaShop.Data.Entites.ApplicationUser> UserManager { get; set; }
    [Inject] private AuthenticationStateProvider AuthenticationStateProvider { get; set; }
    private List<(int Id, string OrderNumber, string RecipientEmail, string Status, DateTimeOffset CreatedAt, bool IsViewedForMe)>? recentNotifications;

    protected override async Task OnInitializedAsync()
    {
        await base.OnInitializedAsync();
        CartService.CartCountChanged += OnCartCountChanged;
        try
        {
            var sessionId = await CartSession.GetOrCreateSessionIdAsync();
            cartCount = await CartService.GetCartItemCountAsync(sessionId);
        }
        catch { }

        // start SignalR connection for admin counts
        try
        {
            _hubConnection = new HubConnectionBuilder()
                .WithUrl(Navigation.ToAbsoluteUri("/hubs/notifications"))
                .WithAutomaticReconnect()
                .Build();

            _hubConnection.On<int, int>("NotifyCounts", async (pending, totalViews) =>
            {
                try
                {
                    pendingOrdersCount = pending;
                    // fetch per-admin unviewed count from server
                        try
                        {
                            var raw = await _hubConnection.InvokeAsync<object>("GetUnviewedCount");
                            failedNotificationsCount = raw == null ? totalViews : Convert.ToInt32(raw);
                        }
                        catch
                        {
                            // fallback to provided totalViews if per-admin call fails
                            failedNotificationsCount = totalViews;
                        }
                }
                catch { }
                await InvokeAsync(StateHasChanged);
            });

            await _hubConnection.StartAsync();

            // get initial counts: pending orders from DB and per-admin unviewed via hub
            try
            {
                using var db = DbFactory.CreateDbContext();
                pendingOrdersCount = await db.Orders.Where(o => o.Status == VeronaShop.Data.Entites.OrderStatus.Pending).CountAsync();
            }
            catch { }

            try
            {
                if (_hubConnection != null)
                {
                    try
                    {
                        var rawInit = await _hubConnection.InvokeAsync<object>("GetUnviewedCount");
                        failedNotificationsCount = rawInit == null ? 0 : Convert.ToInt32(rawInit);
                    }
                    catch { }
                }
            }
            catch { }
        }
        catch { }
    }

    private void OnCartCountChanged(int count)
    {
        cartCount = count;
        InvokeAsync(StateHasChanged);
    }

    // MudMenu OpenChanged wrapper expects Action<bool> (non-async). Call async handler fire-and-forget.
    private void OnMenuOpenChanged(bool open)
    {
        _ = HandleMenuOpenChangedAsync(open);
    }

    public void Dispose()
    {
        try
        {
            if (_hubConnection != null)
            {
                _hubConnection.StopAsync().GetAwaiter().GetResult();
                _hubConnection.DisposeAsync().GetAwaiter().GetResult();
            }
        }
        catch { }
    }

    protected override void OnInitialized()
    {
        base.OnInitialized();

        _theme = new()
        {
            PaletteLight = _lightPalette,
            PaletteDark = _darkPalette,
            LayoutProperties = new LayoutProperties()
        };
    }

    private void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }

    [Inject] private SignInManager<ApplicationUser> SignInManager { get; set; }
    private async Task SignOut()
    {
        await SignInManager.SignOutAsync();
        Navigation.NavigateTo("/");
    }

    private void DarkModeToggle()
    {
        _isDarkMode = !_isDarkMode;
    }

    private void GoToCart()
    {
        Navigation.NavigateTo("/cart");
    }

    private async Task OnNotificationsClicked()
    {
        // optimistically clear badge for immediate feedback, then navigate
        try
        {
            failedNotificationsCount = 0;
            StateHasChanged();
            Navigation.NavigateTo("/admin/notifications");
        }
        catch { }
    }

    private async Task HandleMenuOpenChangedAsync(bool open)
    {
        if (!open) return;
        try
        {
            if (_hubConnection != null)
            {
                var raw = await _hubConnection.InvokeAsync<object>("MarkAllViewed");
                failedNotificationsCount = raw == null ? 0 : Convert.ToInt32(raw);
            }

            var auth = await AuthenticationStateProvider.GetAuthenticationStateAsync();
            var user = auth.User;
            if (user?.Identity?.IsAuthenticated == true)
            {
                var appUser = await UserManager.GetUserAsync(user);
                if (appUser != null)
                {
                    var adminId = appUser.Id;
                    using var db = DbFactory.CreateDbContext();
                    var views = new List<int>();
                    if (await db.TableExistsAsync("NotificationViews"))
                        views = await db.NotificationViews.Where(nv => nv.AdminId == adminId).Select(nv => nv.NotificationId).ToListAsync();
                    var notes = await db.Notifications.OrderByDescending(n => n.CreatedAt).Take(20).ToListAsync();
                    recentNotifications = notes.Select(n => (n.Id, n.OrderNumber, n.RecipientEmail, n.Status.ToString(), n.CreatedAt, views.Contains(n.Id))).ToList();
                }
            }
        }
        catch { }
        await InvokeAsync(StateHasChanged);
    }

    private readonly PaletteLight _lightPalette = new()
    {
        Black = "#110e2d",
        AppbarText = "#424242",
        AppbarBackground = "rgba(255,255,255,0.8)",
        DrawerBackground = "#ffffff",
        GrayLight = "#e8e8e8",
        GrayLighter = "#f9f9f9",
    };

    private readonly PaletteDark _darkPalette = new()
    {
        Primary = "#7e6fff",
        Surface = "#1e1e2d",
        Background = "#1a1a27",
        BackgroundGray = "#151521",
        AppbarText = "#92929f",
        AppbarBackground = "rgba(26,26,39,0.8)",
        DrawerBackground = "#1a1a27",
        ActionDefault = "#74718e",
        ActionDisabled = "#9999994d",
        ActionDisabledBackground = "#605f6d4d",
        TextPrimary = "#b2b0bf",
        TextSecondary = "#92929f",
        TextDisabled = "#ffffff33",
        DrawerIcon = "#92929f",
        DrawerText = "#92929f",
        GrayLight = "#2a2833",
        GrayLighter = "#1e1e2d",
        Info = "#4a86ff",
        Success = "#3dcb6c",
        Warning = "#ffb545",
        Error = "#ff3f5f",
        LinesDefault = "#33323e",
        TableLines = "#33323e",
        Divider = "#292838",
        OverlayLight = "#1e1e2d80",
    };

    public string DarkLightModeButtonIcon => _isDarkMode switch
    {
        true => Icons.Material.Rounded.AutoMode,
        false => Icons.Material.Outlined.DarkMode,
    };
}


