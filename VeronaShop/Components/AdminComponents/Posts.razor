@page "/admin/posts"
@attribute [Authorize(Roles = "Admin")]
@using VeronaShop.Data
@using VeronaShop.Data.Entites
@inject ApplicationDbContext Db
@using Microsoft.EntityFrameworkCore
@using MudBlazor

<MudPaper Class="pa-4">
    <div class="d-flex justify-space-between align-center">
        <MudText Typo="Typo.h5">Manage Posts</MudText>
        <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="CreateNew">New Post</MudButton>
    </div>

    @if (posts == null)
    {
        <MudProgressCircular Indeterminate="true" />
    }
    else
    {
        <MudTable Items="posts" Dense="true" Hover="true" Class="mt-3">
            <HeaderContent>
                <MudTh>Id</MudTh>
                <MudTh>Title</MudTh>
                <MudTh>Created</MudTh>
                <MudTh></MudTh>
            </HeaderContent>
            <RowTemplate>
                <MudTd DataLabel="Id">@context.Id</MudTd>
                <MudTd DataLabel="Title">@context.Title</MudTd>
                <MudTd DataLabel="Created">@context.CreatedAt</MudTd>
                <MudTd>
                    <MudButton Size="Size.Small" Variant="Variant.Outlined" OnClick="@( () => Edit(context) )">Edit</MudButton>
                    <MudButton Size="Size.Small" Variant="Variant.Text" Color="Color.Error" OnClick="@( () => Delete(context) )">Delete</MudButton>
                </MudTd>
            </RowTemplate>
        </MudTable>
    }

    @if (editing != null)
    {
        <MudPaper Class="pa-3 mt-3">
            <EditForm Model="editing" OnValidSubmit="Save">
                <MudTextField @bind-Value="editing.Title" Label="Title" />
                <MudTextField @bind-Value="editing.Summary" Label="Summary" />
                <MudTextField @bind-Value="editing.Content" Label="Content" />
                <div class="mt-2">
                    <MudButton Type="Submit" Variant="Variant.Filled" Color="Color.Primary">Save</MudButton>
                    <MudButton Variant="Variant.Text" OnClick="Cancel">Cancel</MudButton>
                </div>
            </EditForm>
        </MudPaper>
    }
</MudPaper>

@code {
    private List<Post> posts;
    private Post editing;

    protected override async Task OnInitializedAsync()
    {
        posts = await Db.Posts.OrderByDescending(p => p.CreatedAt).ToListAsync();
    }

    private void CreateNew()
    {
        editing = new Post();
    }

    private void Edit(Post p)
    {
        editing = p;
    }

    private void Cancel()
    {
        editing = null;
    }

    private async Task Save()
    {
        if (editing.Id == 0)
        {
            editing.CreatedAt = DateTimeOffset.UtcNow;
            Db.Posts.Add(editing);
        }
        await Db.SaveChangesAsync();
        editing = null;
        posts = await Db.Posts.OrderByDescending(p => p.CreatedAt).ToListAsync();
    }

    private async Task Delete(Post p)
    {
        Db.Posts.Remove(p);
        await Db.SaveChangesAsync();
        posts = await Db.Posts.OrderByDescending(p => p.CreatedAt).ToListAsync();
    }
}
